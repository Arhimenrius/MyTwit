<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="/web/bundles/mytwitmytwit/css/style.css" />
        {% endblock %}
    </head>
    <body>
        </div><br class="clear" />
        <div class="content">
            {% if app.session.started %}
                        {% for flashMessage in app.session.flashbag.get('notice') %}
                        {{ flashMessage }}
                        {% endfor %}
            {% endif %}
            <div class="login">
            {{ form_start(form) }}
                <table>
                    <tr>
                        <td>{{ form_label(form.Nickname) }}</td>
                        <td>{{ form_widget(form.Nickname) }}</td>
                        <td>{{ form_errors(form.Nickname) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.Password.first) }}</td>
                        <td>{{ form_widget(form.Password.first) }}</td>
                        <td>{{ form_errors(form.Password.first) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.Password.second) }}</td>
                        <td>{{ form_widget(form.Password.second) }}</td>
                        <td>{{ form_errors(form.Password.second) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.Email.first) }}</td>
                        <td>{{ form_widget(form.Email.first) }}</td>
                        <td>{{ form_errors(form.Email.first) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.Email.second) }}</td>
                        <td>{{ form_widget(form.Email.second) }}</td>
                        <td>{{ form_errors(form.Email.second) }}</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>{{ form_widget(form.Submit) }}</td>
                        <td></td>
                    </tr>
                </table>
            {{ form_end(form) }}
                <a href="{{ path('login') }}">Masz już konto? Zaloguj się!</a>
            </div>
        </div>
    </body>
</html>